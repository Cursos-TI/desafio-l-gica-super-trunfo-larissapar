print("===== SUPER TRUNFO DAS CIDADES =====\n")

# Cadastro da primeira carta
print("=== Cadastro da Primeira Carta ===")
codigo1 = input("CÃ³digo da carta: ")
cidade1 = input("Nome da cidade: ")
populacao1 = int(input("PopulaÃ§Ã£o: "))
area1 = float(input("Ãrea (kmÂ²): "))
pib1 = float(input("PIB (em bilhÃµes): "))
turismo1 = int(input("NÃºmero de pontos turÃ­sticos: "))

# Cadastro da segunda carta
print("\n=== Cadastro da Segunda Carta ===")
codigo2 = input("CÃ³digo da carta: ")
cidade2 = input("Nome da cidade: ")
populacao2 = int(input("PopulaÃ§Ã£o: "))
area2 = float(input("Ãrea (kmÂ²): "))
pib2 = float(input("PIB (em bilhÃµes): "))
turismo2 = int(input("NÃºmero de pontos turÃ­sticos: "))

# CÃ¡lculo da densidade populacional
densidade1 = populacao1 / area1
densidade2 = populacao2 / area2

# ExibiÃ§Ã£o das cartas
print("\n===== CARTA 1 =====")
print(f"CÃ³digo: {codigo1}")
print(f"Cidade: {cidade1}")
print(f"PopulaÃ§Ã£o: {populacao1}")
print(f"Ãrea: {area1:.2f} kmÂ²")
print(f"PIB: {pib1:.2f} bilhÃµes")
print(f"Pontos turÃ­sticos: {turismo1}")
print(f"Densidade Populacional: {densidade1:.2f} hab/kmÂ²")

print("\n===== CARTA 2 =====")
print(f"CÃ³digo: {codigo2}")
print(f"Cidade: {cidade2}")
print(f"PopulaÃ§Ã£o: {populacao2}")
print(f"Ãrea: {area2:.2f} kmÂ²")
print(f"PIB: {pib2:.2f} bilhÃµes")
print(f"Pontos turÃ­sticos: {turismo2}")
print(f"Densidade Populacional: {densidade2:.2f} hab/kmÂ²")

# Escolha do atributo
print("\nAtributos disponÃ­veis: populacao, area, pib, turismo, densidade")
atributo = input("Digite o atributo para comparaÃ§Ã£o: ").lower()

# ComparaÃ§Ã£o das cartas
vencedor = None

if atributo == "populacao":
if populacao1 > populacao2:
vencedor = cidade1
elif populacao2 > populacao1:
vencedor = cidade2

elif atributo == "area":
if area1 > area2:
vencedor = cidade1
elif area2 > area1:
vencedor = cidade2

elif atributo == "pib":
if pib1 > pib2:
vencedor = cidade1
elif pib2 > pib1:
vencedor = cidade2

elif atributo == "turismo":
if turismo1 > turismo2:
vencedor = cidade1
elif turismo2 > turismo1:
vencedor = cidade2

elif atributo == "densidade":
if densidade1 < densidade2: # aqui o menor vence
vencedor = cidade1
elif densidade2 < densidade1:
vencedor = cidade2

else:
print("\nâš ï¸ Atributo invÃ¡lido! Reinicie o jogo.")

# Resultado final
if vencedor:
print(f"\nğŸ† A cidade vencedora Ã©: {vencedor} ğŸ†")
elif vencedor is None and atributo in ["populacao", "area", "pib", "turismo", "densidade"]:
print("\nğŸ¤ Houve um EMPATE entre as duas cidades!")
